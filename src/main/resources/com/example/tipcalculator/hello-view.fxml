<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tipcalculator.HelloController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label text="Amount">
         <GridPane.margin>
            <Insets bottom="5.0" />
         </GridPane.margin></Label>
      <TextField fx:id="billAmount" GridPane.columnIndex="1">
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" />
         </GridPane.margin>
      </TextField>
      <Label fx:id="tipPercentage" text="0%" GridPane.rowIndex="1" />
      <Label text="Tip" GridPane.rowIndex="2">
         <GridPane.margin>
            <Insets top="5.0" />
         </GridPane.margin></Label>
      <Label text="Total" GridPane.rowIndex="3">
         <GridPane.margin>
            <Insets top="5.0" />
         </GridPane.margin></Label>
      <Slider fx:id="percentageChanger" max="40.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="tipAmount" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <padding>
            <Insets top="5.0" />
         </padding>
         <GridPane.margin>
            <Insets top="5.0" />
         </GridPane.margin>
      </TextField>
      <TextField fx:id="totalAmount" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3">
         <padding>
            <Insets top="5.0" />
         </padding>
         <GridPane.margin>
            <Insets top="5.0" />
         </GridPane.margin>
      </TextField>
   </children>
</GridPane>
